ARG VERSION

FROM vasdvp/health-apis-centos:8

ADD shared/install-git-centos8 /install-git
ADD shared/install-docker-centos8 /install-docker
ADD shared/install-awscli /install-awscli
ADD shared/retry /usr/local/bin/retry

#
# Install Git, awscli and Docker
#
RUN /install-git
RUN /install-awscli
RUN /install-docker

# Install Git-lfs
RUN retry curl -s https://packagecloud.io/install/repositories/github/git-lfs/script.rpm.sh | sudo bash
RUN yum install -y -q git-lfs && git lfs install
